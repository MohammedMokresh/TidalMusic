<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/app_navigation"
            app:startDestination="@id/artistsFragment">

    <fragment
            android:id="@+id/artistsFragment"
            android:name="com.mokresh.tidalmusic.artist.view.ArtistsFragment"
            android:label="ArtistsFragment">
        <action
                android:id="@+id/action_artistsFragment_to_albumsFragment"
                app:destination="@id/albumsFragment"/>
    </fragment>
    <fragment
            android:id="@+id/albumsFragment"
            android:name="com.mokresh.tidalmusic.albums.AlbumsFragment"
            android:label="fragment_albums"
            tools:layout="@layout/fragment_albums">
        <argument
                android:name="query"
                app:argType="string"/>
    </fragment>
</navigation>